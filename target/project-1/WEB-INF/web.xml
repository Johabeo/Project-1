<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>AppServlet</servlet-name>
    <display-name>AppServlet</display-name>
    <description></description>
    <servlet-class>com.servlets.AppServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ApproveServlet</servlet-name>
    <servlet-class>com.servlets.ApproveServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DenyServlet</servlet-name>
    <servlet-class>com.servlets.DenyServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>MakeTransactionServlet</servlet-name>
    <servlet-class>com.servlets.MakeTransactionServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ViewTicketServlet</servlet-name>
    <display-name>ViewTicketServlet</display-name>
    <description></description>
    <servlet-class>com.servlets.ViewTicketServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateUserServlet</servlet-name>
    <display-name>UpdateUserServlet</display-name>
    <description></description>
    <servlet-class>com.servlets.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowAllUsersServlet</servlet-name>
    <display-name>ShowAllUsersServlet</display-name>
    <description></description>
    <servlet-class>com.servlets.ShowAllUsersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ApproveServlet</servlet-name>
    <url-pattern>/approve</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DenyServlet</servlet-name>
    <url-pattern>/deny</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>MakeTransactionServlet</servlet-name>
    <url-pattern>/transaction</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AppServlet</servlet-name>
    <url-pattern>/appServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewTicketServlet</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateUserServlet</servlet-name>
    <url-pattern>/updateUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowAllUsersServlet</servlet-name>
    <url-pattern>/allUsers</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>

</web-app>
